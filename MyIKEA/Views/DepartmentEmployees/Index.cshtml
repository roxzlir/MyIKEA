@{
    //Här väljer jag att köra mot Layout2 i min Shared mapp
    Layout = "_Layout2";
}
<div class="row">
    <div class="col-md-3">
        <ul>
            @foreach(var item in Model.Departments)
            {
                <li>
                    <a asp-action="Index" asp-route-departmentid="@item.DepartmentId">@item.DepartmentName</a>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-9">
        <table class="table">
            <thead>
                
            </thead>
            <tbody>
                <div class="department-message">
                    @if (!string.IsNullOrEmpty(Model.selectedDepartmentName))
                    {
                        <h2>@Model.selectedDepartmentName</h2>
                    }
                    else
                    {
                        <h2>Welcome! Please select a department on the left list</h2>
                    }
                </div>
                @if (!string.IsNullOrEmpty(Model.selectedDepartmentName))
                {
                    <tr>
                        <th>Employee name</th>
                        <th>Department</th>
                    </tr>
                    @foreach (var item in Model.Employees)
                    {
                        <tr>
                            <td>@item.EmployeeName</td>
                            <td>@item.DepartmentName</td>
                        </tr>
                    }
                }
                
            </tbody>
        </table>
    </div>
</div>